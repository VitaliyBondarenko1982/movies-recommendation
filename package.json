{
  "name": "movies-recommendation",
  "version": "1.0.0",
  "description": "Movies recommendation demo",
  "homepage": "https://movies-recommendation.vercel.app/",
  "main": "api/index.js",
  "scripts": {
    "start": "node api/index.js",
    "build": "cd client && yarn && yarn build",
    "client:dev": "cd client && yarn start",
    "server:dev": "nodemon api/index.js",
    "dev": "NODE_ENV=development concurrently \"yarn server:dev\" \"yarn client:dev\"",
    "lint": "eslint client/src/**/*.js api/**/*.js",
    "prepare": "husky install"
  },
  "author": "Vitalii Bondarenko",
  "license": "MIT",
  "engines": {
    "node": "18.x"
  },
  "dependencies": {
    "apollo-server": "^3.8.1",
    "apollo-server-core": "^3.11.1",
    "apollo-server-express": "^3.11.1",
    "axios": "^0.27.2",
    "date-fns": "^2.28.0",
    "express": "^4.18.2",
    "graphql": "^16.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-react": "^7.18.6",
    "concurrently": "^7.6.0",
    "eslint": "^8.29.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.2",
    "nodemon": "^2.0.16",
    "prettier": "^2.8.1",
    "react": "^18.2.0"
  }
}
