{
  "name": "movies-recommendation",
  "version": "1.0.0",
  "description": "Movies recommendation demo",
  "homepage": "https://movies-recommendation.vercel.app/",
  "main": "api/index.js",
  "scripts": {
    "start": "node api/index.js",
    "build": "cd client && yarn && yarn build",
    "client": "cd client && yarn start",
    "api-server": "node api/index.js",
    "api-server:dev": "nodemon api/index.js",
    "dev": "NODE_ENV=development concurrently \"yarn api-server:dev\" \"yarn client\"",
    "vercel:deploy": "vercel build && vercel deploy --prebuilt"
  },
  "author": "Vitalii Bondarenko",
  "license": "MIT",
  "engines": {
    "node": "18.x"
  },
  "dependencies": {
    "apollo-server": "^3.8.1",
    "apollo-server-core": "^3.11.1",
    "apollo-server-express": "^3.11.1",
    "axios": "^0.27.2",
    "date-fns": "^2.28.0",
    "express": "^4.18.2",
    "graphql": "^16.5.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.16"
  }
}
