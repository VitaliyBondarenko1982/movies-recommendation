{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
      {
        "src": "/server/(.*)",
        "headers": { "cache-control": "s-maxage=0" },
        "dest": "/api"
      },
      {
        "src": "/static/(.*)",
        "headers": { "cache-control": "s-maxage=31536000, immutable" },
        "dest": "client/static/$1"
      },
      { "src": "/(.*)", "dest": "client/index.html" }
  ]
}